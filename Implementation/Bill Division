//link: https://www.hackerrank.com/challenges/bon-appetit/problem

#include<iostream>
using namespace std;
int main()
{
    int num;
    cin>>num;
    int k;
    cin>>k;
    int arr[num];
    for(int i=0;i<num;i++)
    {
        cin>>arr[i];
    }
    int sum=0;
    for(int i=0;i<num;i++)
    {
        sum=sum+arr[i];
    }
    sum=sum-arr[k];
    sum=sum/2;
    int b;
    cin>>b;
    
    if(b==sum)
    {
        cout<<"Bon Appetit";
    }
    else
    {
        cout<<b-sum;
    }
}
