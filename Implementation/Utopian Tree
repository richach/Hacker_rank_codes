//link: https://www.hackerrank.com/challenges/utopian-tree/problem

#include<iostream>
using namespace std;
int main()
{
    int num;
    cin>>num;
    for(int j=0;j<num;j++)
    {
        int height=0;
        int n;
        cin>>n;     
        for(int i=0;i<=n;i++)
        { 
            if(i%2==0)
            {
                height=height+1;    
            }
             else
            {
                height=height*2;
            }
        }     
        cout<<height<<endl;
    }  
}
